{
	"info": {
		"_postman_id": "aad7183b-0ce1-4a1f-a454-3ec50b3b35e0",
		"name": "OCAPI demo drschar",
		"description": "A few useful OCAPI calls",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
